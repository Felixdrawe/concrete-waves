datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Spot {
  id          String @id @default(uuid())
  title       String
  description String
  city        String
  country     String
  latitude    Float
  longitude   Float

  // (Optional: for advanced geospatial later)
  // location    Unsupported("geography(Point, 4326)") @db.Geography // ‚Üê only if you use PostGIS in Supabase

  image   String? // optional for now
  clerkId String // the user who created the spot

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
